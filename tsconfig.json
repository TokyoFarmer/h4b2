{
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compilerOptions": {
    "preserveWatchOutput": true,
    "outDir": "./build",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    //"declarationMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "target": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
}