{
  "name": "h4b2",
  "version": "1.0.0",
  "description": "End-to-end framework and inversion of control container for building modular web apps based on Plug-In architecture.",
  "main": "doesnt-exist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TokyoFarmer/h4b2.git"
  },
  "keywords": [
    "plugin",
    "framework"
  ],
  "author": "Andrej T.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TokyoFarmer/h4b2/issues"
  },
  "homepage": "https://github.com/TokyoFarmer/h4b2#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "workspace-sources": {
    "*": [
      "packages/*/src"
    ]
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "wsrun": "^3.6.2",
    "typescript": "^3.0.3",
    "typescript-workspace-plugin": "^2.0.1",
    "prettier": "^1.15.3"
  },
  "scripts": {
    "build": "wsrun --stages -r --ifDependency build",
    "watch": "wsrun watch",
    "test": "wsrun -r -p --ifDependency test",
    "clean": "git clean -fdx build/ node_modules/ packages/*/node_modules packages/*/build packages/*/.intermediate",
    "prettier": "prettier --list-different **/*.ts '**/*.md' **/*.json",
    "prettier:fix": "prettier --write **/*.ts '**/*.md' **/*.json"
  },
  "jest": {
    "verbose": true,
    "projects": [
      "<rootDir>/packages/core",
      "<rootDir>/packages/backend",
      "<rootDir>/packages/frontend",
      "<rootDir>/packages/example"
    ]
  }
}
