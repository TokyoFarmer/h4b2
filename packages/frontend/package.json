{
    "name": "@h4bff/frontend",
    "version": "1.0.0",
    "description": "Frontend framework",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "license": "MIT",
    "private": true,
    "scripts": {
      "build": "tsc -p tsconfig.json",
      "watch": "tsc -w",
      "test": "jest"
    },
    "dependencies": {
      "@h4bff/core": "*"
    },
    "jest": {
      "verbose": false,
      "globals": {
        "ts-jest": {
          "tsConfig": "tsconfig.json",
          "isolatedModules": true
        }
      },
      "moduleFileExtensions": [
        "ts",
        "js"
      ],
      "transform": {
        "^.+\\.ts$": "ts-jest"
      },
      "testRegex": ".*\\.spec\\.ts",
      "collectCoverageFrom": [
        "src/**/*.ts"
      ],
      "coverageDirectory": "coverage"
    }
  }
